{% comment %}
	 cart must be available, we add variants to cart of the hidden country product
{% endcomment %}
{% assign language = "" %}
{% for item in cart.items %}
	{% if item.title contains 'Country -' %}
		{% assign title_array = item.title | split: ' - ' %}
		{% assign language = title_array[1] %}
	{% endif %}
{% endfor %}
{% if language == "" %}
		{% assign language = "us" %}
{% endif %}
